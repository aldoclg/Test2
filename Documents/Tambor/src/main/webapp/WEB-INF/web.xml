<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" id="WebApp_ID" version="3.1">
  <display-name>Tambor</display-name>
  <welcome-file-list>
    <welcome-file>home.xhtml</welcome-file>
  </welcome-file-list>
  <session-config>
    <session-timeout>600</session-timeout>
  </session-config>
  <resource-ref>
    <description>Tambor Datasource</description>
    <res-ref-name>jdbc/postgres</res-ref-name>
    <res-type>javax.sql.DataSource</res-type>
    <res-auth>Container</res-auth>
  </resource-ref>
  <error-page>
    <exception-type>javax.faces.application.ViewExpiredException</exception-type>
    <location>/home.xhtml</location>
  </error-page>
  <context-param>
    <param-name>primefaces.THEME</param-name>
    <param-value>modena</param-value>
  </context-param>
  <filter>
    <filter-name>CoreFilter</filter-name>
    <filter-class>br.org.venturus.tambor.filter.CoreFilter</filter-class>
  </filter>
  <filter>
    <filter-name>SpocFilter</filter-name>
    <filter-class>br.org.venturus.tambor.filter.SpocFilter</filter-class>
  </filter>
  <filter>
    <filter-name>AdminFilter</filter-name>
    <filter-class>br.org.venturus.tambor.filter.AdminFilter</filter-class>
  </filter>
  <filter>
    <filter-name>ManagerFilter</filter-name>
    <filter-class>br.org.venturus.tambor.filter.ManagerFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>CoreFilter</filter-name>
    <url-pattern>/core/*</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>SpocFilter</filter-name>
    <url-pattern>/spoc/*</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>AdminFilter</filter-name>
    <url-pattern>/admin/*</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>ManagerFilter</filter-name>
    <url-pattern>/manager/*</url-pattern>
  </filter-mapping>
  <servlet>
    <servlet-name>Faces Servlet</servlet-name>
    <servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <servlet-mapping>
    <servlet-name>Faces Servlet</servlet-name>
    <url-pattern>/faces/*</url-pattern>
  </servlet-mapping>
</web-app>